<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/anio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="anio"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/anio"
        android:background="@color/colorDisabled"
        android:maxLines="2"
        android:text="titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorTitle" />

    <TextView
        android:id="@+id/docente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titulo"
        android:maxLines="1"
        android:text="docente"
        android:textSize="13dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/clases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/docente"
        android:text="clases"
        android:textColor="@color/colorTitle"
        android:outlineProvider="background"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/presentacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/clases"
        android:text="presentacion"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
        android:textColor="@color/colorSubtitle" />

    <TextView
        android:id="@+id/fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/presentacion"
        android:text="fecha"
        android:textSize="10dp" />


</RelativeLayout>